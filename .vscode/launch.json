    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/models/train/train_seq2seq.py",
            "args": ["--gpu", "--fast_epoch"],
            "env":{
                // "CUDA_VISIBLE_DEVICES":"6,7", 
                "ALFRED_ROOT":"${workspaceFolder}"},
            "console": "integratedTerminal"
        },

        {
            "name": "eval",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/models/eval/eval_seq2seq.py",
            "args": [
                "--gpu", 
                "--fast_epoch",
                "--num_threads=2",
            ],
            "env":{
                // "CUDA_VISIBLE_DEVICES":"6,7",
                "ALFRED_ROOT":"${workspaceFolder}"},
            "console": "integratedTerminal"
        },
    ]
}